extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="../../public/css/forms.css")

block content 
    form(action="/admin/add-product" method="POST")
        .form-group.row
            label(for="name").col-sm-2.col-form-label Name
            .col-sm-10
                input.form-control#name(type="text" name="name")  
        
        .form-group.row
            label(for="price").col-sm-2.col-form-label price
            .col-sm-10
                input.form-control#price(type="text" name="price")
        
        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label imageUrl
            .col-sm-10
                input.form-control#imageUrl(type="text" name="imageUrl")
        
        .form-group.row
            label(for="categoryid").col-sm-2.col-form-label Category
            .col-sm-10
                select.form-control#categoryid( name="categoryid") 
                    option(value="-1" ) Selected Category
                    each category in categories
                        option(value=`${category.id}`) #{category.name}

        .form-group.row
            label(for="description").col-sm-2.col-form-label description
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10")
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary  

    