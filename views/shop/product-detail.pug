extends ../layouts/main-layout.pug

block content 
    .row
        .col-lg-3
            img(src=`/img/${product.imageUrl}`, alt=`${product.description}`).img-fluid
        .col-md-9
            h1 #{product.name}      
            hr      
            a(href="").btn.btn-link.p-0.mb-3 Telefon
            .mb-3                    
                h4.text-primary #{product.price} TL
                button(type="submit").btn.btn-primary.btn-lg Add to CART
            
    .row 
        .col-md-12
            hr
            p #{product.description}
         



